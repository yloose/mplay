<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<addon id="context.program.mplay"
       name="Mediathek Play"
       version="0.0.2"
       provider-name="yloose"
>
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.urllib3" version="2.2.3"/>
    </requires>

    <extension point="xbmc.service" library="src/init.py" />

    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
          <item library="src/mplay.py">
                <label>Play from Mediathek</label>
                <visible>Window.IsVisible(tvguide)|Window.IsVisible(tvsearch)</visible>
            </item>
        </menu>
    </extension>

    <extension point="xbmc.addon.metadata">
		  <summary lang="en_US">Play content directly from the epg.</summary>
		  <description lang="en_US">Mediathek play allows you to directly stream a program from epg as provided by MediathekViewWeb via a context option. Note that the functionality can depend on the underlying epg data.</description>
		  <language></language>
		  <platform>all</platform>
      <license>GPL-3.0</license>
      <source>https://github.com/yloose/mplay</source>
      <assets>
        <icon>resources/assets/logo.png</icon>
      </assets>
	  </extension>
</addon>
